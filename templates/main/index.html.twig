{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block css %}
 <style>
 #calendrier{
     width:80%;
     margin:auto;
 }
 </style>
{% endblock %}

{% block body %}
<div id="calendrier">
</div>
{% endblock %}

{% block js %}
<script> 
window.onload =() => {
 let calendarElt =document.querySelector("#calendrier")
 let calendar =  new FullCalendar.Calendar(calendarElt,{
     initialView: 'dayGridMonth'
 })
 calendar.render()
}
</script>
{% endblock %}
